#!/bin/bash

set -eufo pipefail

{{ if eq .chezmoi.arch "arm64" -}}
sudo softwareupdate --install-rosetta
{{ end -}}

{{ $taps := list
     "heroku/brew"
     "homebrew/cask"
     "homebrew/cask-fonts" -}}

{{ $brews := list
     "bat"
     "fd"
     "gh"
     "git"
     "cmake"
     "jq"
     "pyenv"
     "nvm"
     "neovim"
     "ripgrep"
     "direnv"
     "fzf"
     "tmux"
     "heroku"
     "node"
     "wget" -}}
{{ $casks := list
     "font-hack-nerd-font"
     "font-meslo-lg-nerd-font"
     "docker"
     "google-chrome"
     "google-earth-pro"
     "iterm2"
     "spotify"
     "skype"
     "teamviewer"
     "transmission"
     "zoom"
     "visual-studio-code"
     "1password-cli"
     "1password"
     "google-drive"
     "microsoft-teams"
     "telegram"
     "mactex"
     "vlc" -}}

{{ $extensions := list
     "vscodevim.vim"
     "ms-python.python"
     "ms-vscode.cpptools"
     "redhat.vscode-yaml" -}}

brew bundle --no-lock --file=/dev/stdin <<EOF
{{ range ($taps | sortAlpha | uniq) -}}
tap "{{ . }}"
{{ end -}}
{{ range ($brews | sortAlpha | uniq) -}}
brew "{{ . }}"
{{ end -}}
{{ range ($casks | sortAlpha | uniq) -}}
cask "{{ . }}"
{{ end -}}
{{ range ($extensions | sortAlpha | uniq) -}}
vscode "{{ . }}"
{{ end -}}
EOF
